<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PostActivity"
    android:padding="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/shadow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="패션 정보 공유"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/post_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textSize="20sp"
                android:layout_gravity="right"
                android:padding="5dp"
                />
        </LinearLayout>

    <View
        android:id="@+id/under_line"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/post_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint=" 게시글 내용 작성 \n 날씨 or 불편했던점 (더웠어요, 추웠어요).."
            android:lines="10"
            android:gravity="top"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/radius_imgv">
        <ImageView
            android:id="@+id/post_img"
            android:layout_margin="2dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/camera"/>
</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" 사진을 선택해 주세요."
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/image_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" 사진을 선택해 주세요."
            android:visibility="gone"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/image_mintemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="최저온도"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/image_maxtemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text=" 최고온도"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/image_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/photo_weather3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:visibility="gone"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:clickable="false"
            android:enabled="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/choice_post_categoris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text=" 카테고리 선택"
                android:gravity="left"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/choice_post_categoris2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="\u003E"
                android:layout_marginRight="30dp"
                android:gravity="right"/>

        </LinearLayout>
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/post_selected_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="카테고리를 선택해 주세요"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>